{% extends 'layout.html.twig' %}

{% block CssEnfants %}
<link href="https://unpkg.com/tailwindcss@1.2.0/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}


{% block main %}
    <h1 style="text-align:center">Les produits</h1>
        <div class="flex flex-row bg-lightgrey p-3 justify-content-between">             
            <div id="myBtnContainer">
                <button class="btn active" onclick="filterSelection('all')">Carte</button>
                <button class="btn" onclick="filterSelection('entree')">Entrée</button>
                <button class="btn" onclick="filterSelection('plat')">Plats</button>
                <button class="btn" onclick="filterSelection('dessert')">Dessert</button>
                <button class="btn" onclick="filterSelection('vin')">Vin</button>
            </div>
            <div>
                <h1>Votre panier </h1>
                <a href="{{ path('cart') }}" class="btn btn-light">
                <i class="fas fa-shopping-basket"></i>
                </a>
            </div>                      
        </div>

    <div class="flex flex-row justify-center flex-wrap">
    {% for category in categories %} 
        
     <div class="flex flex-col justify-center items-center ">
     <div class="filterDiv {{category.category.title}}">
        <div class="flex flex-col justify-center items-center max-w-xs">
             <div class="bg-black-300 h-68 w-full rounded-lg bg-cover bg-center"><img src="{{category.image}}"></div>
                <div class="w-56 md:w-64 bg-white -mt-10 shadow-lg rounded-lg overflow-hidden">
                    <div class="py-1 text-center text-xS font-bold uppercase tracking-wide text-black-800">{{category.name}}</div>
                    <div class="py-1 text-center text-xs font-semibold rounded tracking-wide text-black-800">{{category.category.title}}</div>
                        <div class="flex items-center justify-between py-2 px-3 bg-yellow-600">
                            <h1 class="text-white text-xl font-bold ">{{category.price}}€</h1>
                                <button type="submit" name="add_to_cart" class=" bg-white text-xs text-white px-1 py-1 font-semibold rounded uppercase " value="Add to Cart"><a href="{{ path('cart_add', {'id': category.id}) }}">Add to cart</a></button>
                        </div>
                    </div>
                </div>
                </div>
            </div>   
      

    {%  endfor %}
</div>

{% endblock %}
