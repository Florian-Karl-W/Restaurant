{% extends 'layout.html.twig' %}

{% block main %}

<header>
{% include 'include/dashnav.html.twig' %}
</header>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>                
                <th scope="col">Nom</th>
                <th scope="col">Prix</th>
                <th scope="col">Image</th>
                <th scope="col">Catégorie Id</th>               
            </tr>
        </thead>
        <tbody>
           {% for product in products %} 
                <tr>
                    <td scope="row">{{ product.id }}</td>                    
                    <td scope="row">{{product.name}}</td>
                    <td scope="row">{{product.price}}€</td>
                    <td scope="row">{{product.image}}</td>
                    <td scope="row">{{product.category.id}}</td>                    
                    <td scope="row"><a href="{{ path('ccproduct-edit', {id : product.id}) }}" type="button" class="btn btn-info">Modifier</a></td>
                    <td scope="row"><a href="{{ path('ccproduct-delete', {id : product.id}) }}" type="button" class="btn btn-warning">Supprimer</a></td>
                   
                </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}
